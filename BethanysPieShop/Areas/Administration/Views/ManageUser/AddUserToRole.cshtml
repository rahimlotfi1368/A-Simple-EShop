@model ViewModels.UserManagerViewModel
@{
    ViewData["Title"] = Resources.DataDictionary.AddUserToRole;
}
<h2>@Resources.DataDictionary.AddUserToRole</h2>
@if (Model.UserRoles.Any())
{
    <div class="row">
        <div class="col-md-4">
            <form asp-area="Administration" asp-controller="ManageUser" asp-action="AddUserToRole" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <select asp-for="RoleName" class="form-control" asp-items="@ViewBag.Roles"></select>
                </div>
                <input type="hidden" asp-for="@Model.UserId" />
                <div class="form-group">
                    <input type="submit" value="@Resources.DataDictionary.Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
}
else
{
    if (Model.RoleId == Guid.Empty)
    {
        <h3>@Resources.DataDictionary.NoRoleFound</h3>
    }
    else
    {
        <h3>@Resources.DataDictionary.IsRoleSetForUser</h3>
    }

}

