@model IEnumerable<Models.Pie>

@{
    ViewData["Title"] = "Index";
}

<h2>List Of Pies</h2>

<p>
    <a asp-action="Create" asp-controller="Pies" asp-area="Administration">Create New</a>
</p>
<table class="table table-bordered table-hover table-condensed">
    <thead class="bg-primary">
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortDescription)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.Price)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PieCatagory)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.IsPieOfTheWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Visit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Price)
                <span class="glyphicon glyphicon-usd"></span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PieCatagory.CatagoryName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.IsPieOfTheWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Visit)
            </td>
            <td>
                <a asp-area="Administration" asp-controller="Pies" asp-action="Edit" asp-route-id="@item.Id">
                    <span class="glyphicon glyphicon-edit"></span>    
                </a> |
                
                <a asp-area="Administration" asp-controller="Pies" asp-action="Delete" asp-route-id="@item.Id">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
