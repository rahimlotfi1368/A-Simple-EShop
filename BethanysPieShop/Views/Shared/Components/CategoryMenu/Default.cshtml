@model IEnumerable<Models.Catagory>

<li class="dropdown">
    <a asp-controller="Pie"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Pies<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var category in Model)
        {
            <li>
                <a asp-area="Administration"
                   asp-controller="Pies" 
                   asp-action="ListByCategory"
                   asp-route-categoryName="@category.CatagoryName">
                     @category.CatagoryName
                </a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-area="Administration" asp-controller="Pies" asp-action="ListByCategory" asp-route-categoryName="" >View all pies</a>
        </li>
    </ul>
</li>