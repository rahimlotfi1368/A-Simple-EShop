@model Models.Pie 
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="~/Images/@(Model.ImageName)" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Home" asp-action="ShowDetailsOfPie" asp-route-id="@Model.Id">@Model.Name</a>
            </h3>
            <p>@Model.ShortDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary"
                   asp-area="Administration" 
                   asp-controller="Shoping"
                   asp-action="AddToCart"
                   asp-route-id="@(Model.Id)">Add to Cart</a>
            </p>
        </div>
    </div>
</div>